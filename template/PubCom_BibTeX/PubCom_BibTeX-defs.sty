\ProvidesPackage{PubCom_BibTeX-defs}[2025/08/11 v1.1.0 PubCom standard references definitions]

% Useful extra commands
\NewDocumentCommand{\phX}{m}{\phantom{#1}}
\NewDocumentCommand{\File}{m}{\texttt{#1}\xspace}
\NewDocumentCommand{\Macro}{m}{\texttt{\textbackslash #1}\xspace}
\NewDocumentCommand{\Option}{m}{\textsf{#1}\xspace}
\NewDocumentCommand{\Package}{m}{\texttt{#1}\xspace}
\NewDocumentCommand{\BibTeX}{}{\textsc{Bib\TeX}}
\NewDocumentCommand{\Bibkey}{m}{\texttt{#1}~\cite{#1}\xspace}

\NewDocumentCommand{\Run}{m}{Run~#1\xspace}

\NewDocumentCommand{\ATLASTWiki}{m}{\href{https://twiki.cern.ch/twiki/bin/viewauth/Atlas/#1}{#1}\xspace}
\NewDocumentCommand{\ATLASTWikiProtect}{m}{\href{https://twiki.cern.ch/twiki/bin/view/AtlasProtected/#1}{#1}\xspace}
\NewDocumentCommand{\ATLASTWikiPublic}{m}{\href{https://twiki.cern.ch/twiki/bin/view/AtlasPublic/#1}{#1}\xspace}

